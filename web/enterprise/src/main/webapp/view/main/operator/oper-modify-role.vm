// 显示二级权限资源
function showLev2FuncTable(funcArr) {
	if (!funcArr || funcArr.length == 0) {
		return;
	}
	
	var len = funcArr.length;
	var html = '';
	for (var i=0; i<len; i++) {
		var fun = funcArr[i];
		var parentId = fun.parentId;
		var functionId = fun.functionId;
		if (parentId && functionId) {
			$('.lev2-' + parentId).each(function() {
				var html = '<span><label><input type="checkbox" id="' + functionId + '"  class="checkbox_qx" value="' + functionId + '" />' + fun.functionName + '</label></span>';
				$(this).append(html);
			});
		}
	}
}

