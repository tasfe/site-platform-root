function addRole(jAdd,id){
	var ids = jAdd.val();
	if(ids == ""){
		jAdd.val(id);
	}
	else{
		jAdd.val(ids + "," + id);
	}
}

function delRole(jAdd,id){
	var ids = "," + jAdd.val() + ",";
	ids = ids.replace(","+id+",",",");
	if(ids.length == 1){
		jAdd.val("");
	}
	else{
		jAdd.val(ids.substring(1,ids.length-1));
	}
}

