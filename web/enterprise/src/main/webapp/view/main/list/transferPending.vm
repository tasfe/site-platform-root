<script>
function toQuerySubmit(currentPage){
        $("#currentPage").val(currentPage);
        $("#form_search").submit();
}
var dayRang = 92;
function doSearch() {
	var beginDateObj = $('#startDate');
	var endDateObj = $('#endDate');
	var beginDateValue = beginDateObj.val();
	var endDateValue = endDateObj.val();
	if (beginDateValue != "" || endDateValue != "") {
		if (beginDateValue == "") { alert("开始时间为空！"); return false; }
		else if (endDateValue == "") { alert("结束时间为空！"); return false; }
		else {
			if (compareDate(beginDateValue, endDateValue) < 0) {
				alert("起始时间不能大于结束时间！");
				return false;
			}
			else {
				var maxdate = GetDateRangStr(((beginDateValue).split(" "))[0], dayRang-1);
				maxdate = getDateValue(maxdate);
				var enddate = getDateValue(((endDateValue).split(" "))[0]);
				if (compareDate(enddate, maxdate) < 0) {
					alert("请选择三个月内您要查询的记录！");
					return false;
				}
			}
		}
	}
	$("#form_search").submit();
}

$(function(){
	var totalItem = '$!response.data.page.pageInfo.totalItem';
	var pageSize = '$!response.data.page.pageInfo.pageSize';
	var currentPage = '$!response.data.page.pageInfo.currentPage';
	var pageCount = '$!response.data.page.pageInfo.getTotalPage()';
	if(pageCount == 0){
			pageCount=1;
		}
		if(!currentPage || totalItem == 0){
			currentPage = 1;
		}
	$("#pageCount").html(pageCount);
	$("#currentPage").html(currentPage);
	$(".input_go").val(currentPage);
	
	
	setClearStartDate('#startDate', '#endDate', dayRang);
	setClearEndDate('#startDate', '#endDate', dayRang);
	
	$(".J_btn_chaxun").click(function(){
		doSearch();
	});
	
	$(".checkbox_all").click(function(){
		var $this = $(this);
		var isCheck = $this.attr("checked");
		if(isCheck == "checked") $(".checkbox").attr("checked", true);
		else $(".checkbox").attr("checked", false);
	});
	$(".checkbox").click(function(){
		var $this = $(this);
		var isCheck = $this.attr("checked");
		if(isCheck == "checked") { $this.attr("checked", true); var len = $(".checkbox").length; var flag = true; for(var i = 0; i < len; i++){ if($(".checkbox").eq(i).attr("checked") != "checked") { $(".checkbox_all").attr("checked", false); flag = false; break; } } if(flag) $(".checkbox_all").attr("checked", true);}
		else { $this.attr("checked", false); $(".checkbox_all").attr("checked", false);}
	});
	
	$(".btn_chaxun ml30").click(function(){
		$("#form_search").submit();
	});
	
	$(".J_btn_shenhe").click(function(){
		if($(".checkbox:checked").length == 0) { alert("请选择您要审核的内容！"); return false; }
		$('#form_batchAudit').submit();
	});
	
	$(".tools_dc").click(function(){
		$('#transfer').submit();
	});
	
})

</script>
